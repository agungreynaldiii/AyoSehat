<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="@color/white"
    android:layout_height="120dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="201dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/list1"
        android:orientation="vertical"
        android:padding="10dp"></LinearLayout>


    <View
        android:layout_width="381dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:background="@color/green" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="25dp"
        android:text="Agung"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_pengalaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="70dp"
        android:background="@color/abu"
        android:text="Penglaman"
        android:textColor="@color/charcoal"
        android:textSize="13sp"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/txt_spesialis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="45dp"
        android:text="Spesialis"
        android:textColor="@color/lava"
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt_lulusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/txt_pengalaman"
        android:background="@color/abu"
        android:text=" lulusan "
        android:textColor="@color/charcoal"
        android:textSize="13sp"
        android:textStyle="normal|italic" />

    <View
        android:id="@+id/foto_profil"
        android:layout_width="66dp"
        android:layout_height="80dp"
        android:layout_below="@id/txt_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-21dp"
        android:background="@drawable/img" />

    <!--    <Button-->
    <!--        android:id="@+id/doc_profil"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@id/txt_name"-->
    <!--        android:layout_alignParentEnd="true"-->
    <!--        android:layout_marginEnd="15dp"-->
    <!--        android:text="Profil" />-->



</RelativeLayout>